pipeline {
    agent any
    stages {

        stage('Lint HTML') {
            steps {
                sh 'tidy -q -e *.html'
            }
        }
        stage('Build Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'DockerHub', passwordVariable: 'veracode_password', usernameVariable: 'veracode_username')]) {
                    sh '''
                        docker build -t jerrybuild .
                    '''
                }
            }
        }
       
    }
}